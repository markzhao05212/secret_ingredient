# Capture the Narrative Bot System Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Your team invitation code (used as API key for competition LLM)
TEAM_INVITATION_CODE=your_team_invitation_code_here

# Campaign objective - choose one:
# - support_victor: Support Victor Hawthorne's campaign
# - support_marina: Support Marina's campaign  
# - voter_disillusionment: Cause voter apathy and disillusionment
CAMPAIGN_OBJECTIVE=support_victor

# =============================================================================
# PLATFORM SETTINGS
# =============================================================================

# Legit Social platform URLs
PLATFORM_URL=https://social.legitreal.com
API_BASE_URL=https://social.legitreal.com/api

# Competition LLM API
LLM_API_URL=https://llm-proxy.legitreal.com

# =============================================================================
# EXTERNAL LLM APIS (OPTIONAL)
# =============================================================================

# OpenAI API (optional but recommended for better content generation)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API (optional alternative)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Number of bots to run simultaneously
ACTIVE_BOTS=10

# Maximum number of accounts available (competition limit: 40)
MAX_ACCOUNTS=40

# Bot posting intervals (in seconds)
POSTING_INTERVAL_MIN=300    # 5 minutes
POSTING_INTERVAL_MAX=1800   # 30 minutes

# Engagement probability (0.0 to 1.0)
ENGAGEMENT_PROBABILITY=0.3

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limits (adjust based on platform behavior)
RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW=60

# =============================================================================
# CONTENT STRATEGY
# =============================================================================

# Maximum post length
MAX_POST_LENGTH=280

# Use GIFs in posts
USE_GIFS=true
GIF_PROBABILITY=0.2

# Content mixing ratios during political phase
POLITICAL_CONTENT_RATIO=0.4
NEUTRAL_CONTENT_RATIO=0.6

# Audience building phase duration (days)
AUDIENCE_BUILDING_DAYS=2

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file location
LOG_FILE=data/logs/bot_system.log

# Log rotation settings
MAX_LOG_SIZE=10485760    # 10MB
BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to true for development mode (more verbose logging, etc.)
DEBUG_MODE=false

# Skip authentication for testing (not recommended for production)
SKIP_AUTH=false

# Dry run mode (don't actually post content)
DRY_RUN=false